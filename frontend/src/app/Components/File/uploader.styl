.AppUploader
  border 4px dashed #ccc
  padding 10px
  border-radius 8px

  button
    max-width none
    margin 0

  .progress-bar
    position relative
    height 6px
    margin 6px 0 0 0
    background-color #F4D03F
    background-image linear-gradient(132deg, #f4583f 0%, #F4D03F 20%, #16A085 100%)
    border-radius 2px
    border 1px solid #ccc

  .progress-bar .progress
    height 6px
    background-color rgba(255, 255, 255, 0.8)
    width 100%
    float right
    transition width 0.3s
    border-radius 2px